<widget id="com.yourcompany.weblauncher.bb10.home" 
  xmlns="http://www.w3.org/ns/widgets" 
  xmlns:cdv="http://cordova.apache.org/ns/1.0" 
  xmlns:rim="http://www.blackberry.com/ns/widgets" version="0.0.1">
  <icon src="img/logo.png"/>
  <author email="dreumer@blackberry.com" href="http://www.blackberry.com/">Dennis Reumer</author>
  <description>A simple weblauncher</description>
  <content src="index.html"/>
  <preference name="AutoHideSplashScreen" value="true"/>
  <preference name="ChildBrowser" value="disable"/>
  <preference name="DiskCache" value="disable"/>
  <preference name="HideKeyboardFormAccessoryBar" value="disable"/>
  <preference name="Orientation" value="default"/>
  <preference name="PopupBlocker" value="disable"/>
  <preference name="WebSecurity" value="disable"/>
  <preference name="BackgroundColor" value="0xff000000"/>
  <name>Home</name>
</widget>